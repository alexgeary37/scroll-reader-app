  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "cross-fetch": "^3.1.5",
    "dotenv": "^8.6.0",
    "express": "^4.17.2",
    "express-validator": "^6.14.0",
    "mongodb": "^4.3.1",
    "mongoose": "^5.13.14"
  },
  "devDependencies": {
    "concurrently": "^6.5.1",
    "nodemon": "^2.0.15"
  }
}
